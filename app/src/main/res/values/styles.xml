<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary branding color for the app -->
        <!-- Dark variant of the primary color -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <!-- Accent color used for highlights and interactive elements -->
        <item name="colorAccent">@color/accent</item>

        <!-- Customizing the ActionBar color -->
        <item name="colorPrimary">@color/actionBarColor</item>

        <!-- Additional design adjustments -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Button styles -->
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Custom button style -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@color/buttonBackgroundColor</item>
    </style>
</resources>
