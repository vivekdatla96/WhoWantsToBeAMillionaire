<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_over"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/gameOverTextColor"/>

    <TextView
        android:id="@+id/final_earnings_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_over_text"
        android:layout_marginTop="20dp"
        android:text="@string/final_earnings_initial"
        android:textSize="24sp"
        android:textColor="@color/finalEarningsTextColor"/>

    <Button
        android:id="@+id/restart_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_earnings_text_view"
        android:layout_marginTop="40dp"
        android:text="@string/restart_game"
        android:textColor="@color/restartButtonTextColor"/>

</RelativeLayout>

